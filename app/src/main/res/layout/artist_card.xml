<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:id="@+id/artist_card">

    <!--XXX Simplify?-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/small_artist_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/unknown_artist"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="18dp"/>
        <!--XXX Relative inside relative?-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/small_artist_image"
            android:layout_alignTop="@+id/small_artist_image"
            android:layout_alignBottom="@+id/small_artist_image"
            android:layout_marginStart="18dp">

            <TextView
                android:id="@+id/artist_name"
                style="@style/MainLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unknown_artist"
                android:layout_marginTop="12dp"/>
            <TextView
                android:id="@+id/artist_styles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unknown_genres"
                android:layout_below="@+id/artist_name"
                android:layout_alignParentStart="true"
                android:layout_marginTop="6dp"/>
            <TextView
                android:id="@+id/albums_and_songs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unknown_albums_and_songs"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>


    </RelativeLayout>



</android.support.v7.widget.CardView>